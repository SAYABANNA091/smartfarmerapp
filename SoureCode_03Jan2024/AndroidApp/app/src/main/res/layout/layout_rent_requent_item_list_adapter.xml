<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/transparent"
    app:cardCornerRadius="@dimen/_5sdp"
    android:outlineAmbientShadowColor="@color/transparent"
    android:outlineSpotShadowColor="@color/transparent"
    android:elevation="0dp"
    >

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White80"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_property_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rafiki" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_property_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kumbh_sans_semi_bold"
                android:text="John Deere Tractor"
                android:textColor="@color/Grey80"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_14sdp" />


            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/kumbh_sans_regular"
                android:text="Nagpur, 123456"
                android:textColor="@color/Grey60"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center_vertical"
                android:text="56 HP"
                android:textColor="@color/Grey60"
                android:textSize="12sp" />


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/ll_price"
         >
         <View
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"/>
         <TextView
             android:id="@+id/tv_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"

             android:fontFamily="@font/kumbh_sans_medium"
             android:gravity="center_vertical|end"
             android:text="Rs.5000"

             android:textColor="@color/Grey80"
             android:textSize="12sp" />
         <TextView
             android:id="@+id/tv_price_type"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginEnd="@dimen/_10sdp"
             android:fontFamily="@font/kumbh_sans_regular"
             android:gravity="center_vertical|end"
             android:text="/Day"

             android:textColor="@color/Grey60"
             android:textSize="12sp" />
     </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



