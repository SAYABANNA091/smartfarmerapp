<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_user_hello"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/kumbh_sans_bold"
            android:gravity="center_vertical"
            android:text="@string/hello_user"
            android:textColor="@color/Primary100"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxLength="60"
            android:textSize="@dimen/_20sdp" />
        <TextView
            android:id="@+id/tv_inquiry_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_forget_password"
            android:fontFamily="@font/kumbh_sans_regular"
            android:gravity="center"
            android:layout_marginVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/inquiries"
            android:textColor="@color/White20"
            android:visibility="invisible"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/notification"
            android:visibility="invisible"/>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="@dimen/_3sdp"
            android:id="@+id/ll_rent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/home_item_back"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/rent_home_btn" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/btn_forget_password"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_6sdp"
                android:text="@string/rent"
                android:textColor="@color/White20"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/_3sdp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_buy_sell"
            android:elevation="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/home_item_back"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/product_home_btn" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/btn_forget_password"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_6sdp"
                android:text="@string/buy_sell"
                android:textColor="@color/White20"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="@dimen/_3sdp"
            android:id="@+id/ll_market"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/home_item_back"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/home_market_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/btn_forget_password"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_6sdp"
                android:text="@string/market"
                android:textColor="@color/White20"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/_3sdp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_weather"
            android:elevation="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/home_item_back"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/home_weather_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


            <TextView
                android:id="@+id/txt_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/btn_forget_password"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_6sdp"
                android:text="@string/weather"
                android:textColor="@color/White20"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:gravity="center"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="@dimen/_3sdp"
            android:id="@+id/ll_my_account"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/home_item_back"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_weight="1"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/rafiki" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/btn_forget_password"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_6sdp"
                android:text="@string/my_account"
                android:textColor="@color/White20"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/_3sdp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_attendance"
            android:elevation="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/home_item_back"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/home_page_phone_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


            <TextView
                android:id="@+id/txt_attandance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/btn_forget_password"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_6sdp"
                android:text="@string/attendance"
                android:textColor="@color/White20"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/kumbh_sans_medium"
            android:gravity="center_vertical"
            android:text="@string/inquiries"
            android:textColor="@color/Grey100"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_inquiries"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/kumbh_sans_regular"
            android:textColor="@color/Grey60"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="@string/see_all"
             />


    </RelativeLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:layout_weight="1">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sf_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_inquiries_Shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </com.facebook.shimmer.ShimmerFrameLayout>
    <ScrollView
        android:id="@+id/ll_inquires"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_inquiries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_inquiries_porducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    </ScrollView>
        <TextView
            android:id="@+id/tv_no_inq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_have_not_received_any_inquiries_yet"
            android:fontFamily="@font/kumbh_sans_regular"
            android:textColor="@color/Grey60"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>