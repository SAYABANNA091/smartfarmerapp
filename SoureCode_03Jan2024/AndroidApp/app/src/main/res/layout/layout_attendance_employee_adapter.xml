<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/ck_employee"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:buttonTint="@color/Primary100" />

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_5sdp"

        android:background="@drawable/home_item_back"
        android:gravity="center"
        android:orientation="horizontal"

        android:paddingVertical="@dimen/_5sdp">


        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardCornerRadius="45dp"

            >

            <ImageView
                android:id="@+id/iv_requests"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_name_tacket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/kumbh_sans_medium"
            android:gravity="start"
            android:text="Mark Ronald"
            android:textColor="@color/Grey100" />


    </LinearLayout>


</LinearLayout>