<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_item_back"
        android:layout_marginVertical="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardCornerRadius="45dp"
            >
            <ImageView
                android:id="@+id/iv_employee_pic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Mark Ronald"
                android:fontFamily="@font/kumbh_sans_semi_bold"
                android:textColor="@color/Grey100"
                android:textSize="@dimen/_14sdp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txt_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Field Manager"
                android:fontFamily="@font/kumbh_sans_medium"
                android:textColor="@color/Grey80"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Grey60"
                android:gravity="start"
                android:text="Present"

                android:fontFamily="@font/kumbh_sans_medium"
                android:textSize="@dimen/_12sdp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txt_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="11"
                android:fontFamily="@font/kumbh_sans_medium"
                android:textColor="@color/Primary100" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>