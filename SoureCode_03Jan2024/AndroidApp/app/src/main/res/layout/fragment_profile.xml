<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/kumbh_sans_bold"
            android:gravity="center_vertical"
            android:text="Hello, Mark!"
            android:ellipsize="end"
            android:maxLines="1"

            android:textColor="@color/Primary100"
            android:textSize="@dimen/_20sdp" />

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:src="@drawable/notification"
            android:visibility="invisible"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp">

                    <View
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/dotted_circle" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        app:cardCornerRadius="@dimen/_120sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/default_profile" >

                        <ImageView
                            android:id="@+id/iv_user_image"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_profile" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/circle_outline"
                    android:clipToOutline="true"
                    android:src="@drawable/edit_icon1" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kumbh_sans_bold"
                android:gravity="center"
                android:text="John Richardson"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textColor="@color/Grey100"
                android:textSize="@dimen/_18sdp"
                android:layout_below="@+id/rl_image_view"
                android:layout_marginTop="@dimen/_10sdp"/>


            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="John Richardson@yopmail.com"
                android:textColor="@color/Grey60"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginTop="@dimen/_10sdp"/>



            <LinearLayout
                android:id="@+id/ll_change_lang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/txt_field_sign_screen"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginTop="@dimen/_25sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/language_change_icon"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/Change_Language"
                    android:textColorHint="@color/Grey80"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/txt_field_sign_screen"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/change_pass" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/change_password"
                    android:textColorHint="@color/Grey80"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_trems_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/txt_field_sign_screen"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:layout_below="@+id/ll_change_lang"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/trems_condition_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/terms_conditions"
                    android:textColorHint="@color/Grey80"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/txt_field_sign_screen"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:layout_below="@+id/ll_trems_condition"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/privacy_policy_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/privacy_policy"
                    android:textColorHint="@color/Grey80"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/txt_field_sign_screen"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:layout_below="@+id/ll_privacy_policy"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/logout_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/logout"
                    android:textColorHint="@color/Grey80"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>




            <TextView
                android:id="@+id/tv_delete_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/kumbh_sans_regular"
                android:text="@string/delete_account"
                android:textColor="@color/AccentRed"
                android:layout_marginHorizontal="@dimen/_60sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>


    </ScrollView>
</LinearLayout>