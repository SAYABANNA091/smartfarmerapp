<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentTop="true"
      />
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ef_ic_arrow_back"
        android:layout_margin="@dimen/_15sdp"
        app:tint="@color/Primary100" />
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/location_icon" />

    <TextView
        android:id="@+id/btn_pick_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/btn_forget_password"
        android:fontFamily="@font/kumbh_sans_regular"
        android:gravity="center"
        android:paddingVertical="@dimen/_6sdp"
        android:text="@string/pick_location"
        android:textColor="@color/White20"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="@dimen/_15sdp"
        android:textSize="@dimen/_14sdp"/>
</RelativeLayout>