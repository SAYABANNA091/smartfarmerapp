<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_calendar_item"
    android:layout_width="70dp"
    android:layout_height="80dp"
    android:background="@drawable/simple_edittext_white100"
    android:orientation="vertical"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_day_calendar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/kumbh_sans_regular"
        android:textColor="@color/Primary100"
        android:textSize="@dimen/_14sdp"
        tools:text="Fri" />
    <TextView
        android:id="@+id/tv_date_calendar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/kumbh_sans_regular"
        android:gravity="center"
        android:text="20"
        android:layout_marginVertical="@dimen/_4sdp"
        android:textColor="@color/Primary100"
        android:textSize="@dimen/_12sdp" />





</LinearLayout>