<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WeatherActivity">

    <include layout="@layout/actionbar_layout_with_title" />
    <!--Search-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/txt_field_sign_screen"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/search_icon" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:fontFamily="@font/kumbh_sans_regular"
                android:hint="@string/hint_location"
                android:imeOptions="actionSearch"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="@color/Grey60"
                android:textSize="@dimen/_12sdp" />




        <ImageView
            android:id="@+id/iv_clear_search"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/remove_image_icon"
            app:tint="@color/Primary100" />

    </LinearLayout>
        <Spinner
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/sp_loc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/SpinnerTheme"/>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--Current Weather-->

    <LinearLayout
        android:id="@+id/ll_current_weather"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_11sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.25"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_current_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="@color/Primary100"
                    android:textSize="@dimen/_60sdp"
                    app:fontFamily="@font/kumbh_sans_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="°C"
                    android:textColor="@color/Primary100"
                    android:textSize="@dimen/_25sdp"
                    app:fontFamily="@font/kumbh_sans_bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_current_loc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Aurangabad, India"
                android:textColor="@color/Primary100"
                android:textSize="@dimen/_16sdp"
                android:maxLines="1"
                android:ellipsize="end"
                app:fontFamily="@font/kumbh_sans_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.75">

            <ImageView
                android:id="@+id/tv_current_temp_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/weather_icon_06" />
        </LinearLayout>

    </LinearLayout>
    <!--Weather Stats-->

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/ll_current_weather_stats"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_11sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/ll_current_weather"
            android:paddingVertical="@dimen/_2sdp"
           >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:padding="0dp"
                app:cardCornerRadius="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/rainfall_alpha"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/rain_icon" />

                    <View
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_rain"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="6%"
                        android:textColor="@color/rainfall"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/kumbh_sans_bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="@dimen/_7sdp"
                android:layout_height="match_parent" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:padding="0dp"
                app:cardCornerRadius="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/feel_temp_alpha"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/temp_icon" />

                    <View
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_feel_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="16"
                        android:textColor="@color/feel_temp"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/kumbh_sans_bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="°C"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/feel_temp"
                        android:textSize="@dimen/_9sdp"
                        app:fontFamily="@font/kumbh_sans_bold"  />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="@dimen/_7sdp"
                android:layout_height="match_parent" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:padding="0dp"
                app:cardCornerRadius="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/wind_alpha"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/wind_icon" />

                    <View
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_wind_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="19 km/h"
                        android:textColor="@color/wind"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/kumbh_sans_bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="@dimen/_7sdp"
                android:layout_height="match_parent" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:elevation="0dp"
                android:outlineAmbientShadowColor="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:padding="0dp"
                app:cardCornerRadius="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/humidity_alpha"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/humidity_icon" />

                    <View
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_hymidity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="78%"
                        android:textColor="@color/humidity"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/kumbh_sans_bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sf_current_weather_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginHorizontal="@dimen/_11sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/btn_bg_greay100"/>
    </androidx.cardview.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>

    <!--Todays Forcast-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_s_forecast"
        android:textColor="@color/Grey100"
        android:textSize="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:fontFamily="@font/kumbh_sans_bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_7sdp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:id="@+id/rv_day_forcast"
            />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sf_hour_forecast_shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hour_forecast_shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_7sdp" />

    <!--Week's Forcast-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weekly_forecast"
        android:textColor="@color/Grey100"
        android:textSize="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:fontFamily="@font/kumbh_sans_bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_7sdp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_week_forecast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sf_week_forecast_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_week_forecast_shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </RelativeLayout>

</LinearLayout>