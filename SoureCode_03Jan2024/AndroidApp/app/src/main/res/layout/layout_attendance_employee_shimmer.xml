<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/ll_base">

    <CheckBox
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:buttonTint="@color/Primary100"/>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="@dimen/_5sdp"
      android:layout_marginVertical="@dimen/_6sdp"
      android:layout_marginHorizontal="@dimen/_5sdp"
      android:layout_marginEnd="@dimen/_15sdp"
      android:layout_weight="1"
      android:elevation="0dp">
    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_5sdp"
        android:background="@color/Grey60">


        <androidx.cardview.widget.CardView
            android:visibility="invisible"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardCornerRadius="45dp"
            >
        <ImageView

            android:id="@+id/iv_employee_pic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_icon" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:visibility="invisible"
            android:id="@+id/txt_name_tacket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="start"
            android:fontFamily="@font/kumbh_sans_medium"
            android:textColor="@color/Grey100"
            android:text="Mark Ronald" />


    </LinearLayout>
  </androidx.cardview.widget.CardView>


</LinearLayout>