<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    app:dragEdge="right|left"
    android:paddingHorizontal="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:mode="same_level">

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/delete_layout"
        android:layout_width="@dimen/_75sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:background="@color/White100"
        android:gravity="center_vertical"

        >

        <ImageView
            android:gravity="center_vertical"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_icon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="match_parent"
        android:background="@color/White100"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_20sdp"
        >

        <ImageView
            android:gravity="center_vertical"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon_side"/>
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:cardCornerRadius="@dimen/_5sdp"
        android:elevation="0dp"
        android:outlineAmbientShadowColor="@color/transparent"
        android:outlineSpotShadowColor="@color/transparent"
        >

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Grey60"
            android:orientation="horizontal">

            <ImageView
                android:visibility="invisible"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:visibility="invisible"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tractor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kumbh_sans_semi_bold"
                    android:text="Tractor"
                    android:textColor="@color/Primary100"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/kumbh_sans_bold"
                    android:text="John Deere Tractor"
                    android:textColor="@color/Grey80"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_state_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:text="John Deere Tractor"
                    android:textColor="@color/Grey60"
                    android:textSize="12sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:fontFamily="@font/kumbh_sans_regular"
                        android:gravity="center_vertical"
                        android:text="56 HP"
                        android:textColor="@color/Grey60"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/txt_price_per"
                        android:fontFamily="@font/kumbh_sans_medium"
                        android:gravity="center_vertical"
                        android:text="Rs.5000"
                        android:textColor="@color/Grey80"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/txt_price_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/kumbh_sans_regular"
                        android:gravity="center_vertical"
                        android:text="/Day"
                        android:textColor="@color/Grey60"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
