<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        >

        <FrameLayout
            android:id="@+id/home_frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/rent_frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/buy_sell_frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/profile_frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>


    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"

        android:background="@drawable/bottom_navigation_back"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/ll_home"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_round_home"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/home_circule"/>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/home_icon"
                android:id="@+id/iv_home"
                android:layout_marginTop="@dimen/_2sdp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/home"
                android:gravity="center"
                android:id="@+id/txt_home"
                android:fontFamily="@font/kumbh_sans_regular"
                android:textColor="@color/Primary100"
                android:textSize="@dimen/_10sdp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/ll_rent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_round_rent"
                android:visibility="invisible"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/home_circule"/>

            <ImageView
                android:id="@+id/iv_rent"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/rent_icon"
                android:layout_marginTop="@dimen/_2sdp"/>


            <TextView
                android:id="@+id/txt_rent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/rent"
                android:fontFamily="@font/kumbh_sans_regular"
                android:textColor="@color/Primary100"
                android:textSize="@dimen/_10sdp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_buy_sell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_round_buy_sell"
                android:visibility="invisible"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/home_circule"/>

            <ImageView
                android:id="@+id/iv_buy_sell"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/buy_sell_icon"
                android:layout_marginTop="@dimen/_2sdp"/>


            <TextView
                android:id="@+id/txt_buy_sell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/buy_sell"
                android:gravity="center"
                android:fontFamily="@font/kumbh_sans_regular"
                android:textColor="@color/Primary100"
                android:textSize="@dimen/_10sdp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_round_profile"
                android:visibility="invisible"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/home_circule"/>

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/user_icon"
                android:layout_marginTop="@dimen/_2sdp"/>


            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/profile"
                android:gravity="center"
                android:fontFamily="@font/kumbh_sans_regular"
                android:textColor="@color/Primary100"
                android:textSize="@dimen/_10sdp"/>


        </LinearLayout>







    </LinearLayout>

</LinearLayout>