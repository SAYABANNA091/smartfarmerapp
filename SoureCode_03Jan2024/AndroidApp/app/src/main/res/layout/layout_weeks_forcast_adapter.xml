<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/_6sdp"
        android:background="@drawable/home_item_back"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_5sdp">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/kumbh_sans_medium"
            android:gravity="start"
            android:text="Monday"
            android:textColor="@color/Grey100"
            android:textSize="@dimen/_12sdp"/>

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/weather_icon_01"/>
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kumbh_sans_bold"
                android:gravity="center"
                android:text="16"
                android:textColor="@color/Primary33"
                android:textSize="@dimen/_12sdp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/kumbh_sans_bold"
                android:text="°C"
                android:textColor="@color/Primary33"
                android:layout_gravity="top"
                android:gravity="top"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_7sdp" />
            <View
                android:layout_width="@dimen/_7sdp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kumbh_sans_bold"
                android:gravity="center"
                android:text="16"
                android:textColor="@color/Grey40"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:fontFamily="@font/kumbh_sans_bold"
                android:gravity="top"
                android:text="°C"
                android:textColor="@color/Grey40"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_8sdp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>