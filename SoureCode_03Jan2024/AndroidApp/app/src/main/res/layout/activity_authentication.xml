<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AuthenticationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/bottom_round_bg_primery200"

        >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/sign_up_bg"
                android:background="@drawable/bottom_round_bg_primery200"
                />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_85sdp"
            android:src="@drawable/app_logo"
            android:elevation="@dimen/_5sdp"
            />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/_minus30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="@color/Grey80"
        android:textSize="@dimen/_14sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        app:fontFamily="@font/kumbh_sans_medium"
        android:gravity="center"
        android:paddingVertical="@dimen/_50sdp"
        android:background="@drawable/bottom_round_bg_primery200"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">



<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_5sdp" />-->

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/kumbh_sans_semi_bold"-->
<!--            android:gravity="center"-->
<!--            android:paddingHorizontal="@dimen/_10sdp"-->
<!--            android:text="@string/desc"-->
<!--            android:textColor="@color/Grey60"-->
<!--            android:textSize="@dimen/_10sdp" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_17sdp"
            android:background="@drawable/btn_bg_primery"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kumbh_sans_medium"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textColor="@color/White40"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign_in"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp"
            android:fontFamily="@font/kumbh_sans_medium"
            android:gravity="center"
            android:text="@string/already_have_an_account"
            android:textColor="@color/Grey100"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp" />
    </LinearLayout>
</LinearLayout>