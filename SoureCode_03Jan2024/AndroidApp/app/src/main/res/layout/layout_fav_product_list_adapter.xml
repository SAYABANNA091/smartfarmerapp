<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/transparent"
    android:elevation="0dp"
    android:outlineAmbientShadowColor="@color/transparent"
    android:outlineSpotShadowColor="@color/transparent"
    app:cardCornerRadius="@dimen/_5sdp">


    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White80"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cow" />

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/_7sdp"
                android:src="@drawable/selected_star"
                android:visibility="visible"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:ellipsize="end"
                app:fontFamily="@font/kumbh_sans_semi_bold"
                android:maxLines="1"
                android:text="Brown Cow"
                android:textColor="@color/Grey80"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/tv_product_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                app:fontFamily="@font/kumbh_sans_regular"
                android:maxLines="2"
                android:textColor="@color/Grey60"
                android:text="Rs.2500"
                android:textSize="@dimen/_10sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                app:fontFamily="@font/kumbh_sans_regular"
                android:maxLines="2"
                android:text="Rs.2500"
                android:textColor="@color/Grey60"
                android:textSize="@dimen/_10sdp" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                app:fontFamily="@font/kumbh_sans_semi_bold"
                android:maxLines="1"
                android:text="Rs.2500"
                android:textColor="@color/Grey80"
                android:textSize="@dimen/_10sdp" />
            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



