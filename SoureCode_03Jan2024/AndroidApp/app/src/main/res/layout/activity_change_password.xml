<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangePasswordActivity">

    <include layout="@layout/actionbar_layout_with_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp" />
    <LinearLayout
        android:id="@+id/ll_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/txt_field_sign_screen"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/password_icon" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/edt_current_pass"
            android:background="@color/transparent"
            android:fontFamily="@font/kumbh_sans_regular"
            android:hint="@string/current_password"
            android:textColor="@color/Primary100"
            android:textColorHint="@color/Grey60"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:maxLength="20"/>

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_12sdp"
            android:id="@+id/iv_current_pass"
            android:src="@drawable/password_visible_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />

    <LinearLayout
        android:id="@+id/ll_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/txt_field_sign_screen"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/password_icon" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/edt_new_pass"
            android:background="@color/transparent"
            android:fontFamily="@font/kumbh_sans_regular"
            android:hint="@string/new_password"
            android:textColor="@color/Primary100"
            android:textColorHint="@color/Grey60"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:maxLength="20"/>
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_12sdp"
            android:id="@+id/iv_new_pass"
            android:src="@drawable/password_visible_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />


    <LinearLayout
        android:id="@+id/ll_Confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/txt_field_sign_screen"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/password_icon" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/Confirm_new_password"
            android:background="@color/transparent"
            android:fontFamily="@font/kumbh_sans_regular"
            android:hint="@string/confirm_new_password_shmoll"
            android:textColor="@color/Primary100"
            android:textColorHint="@color/Grey60"
            android:textSize="16sp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            app:passwordToggleEnabled="true"
            android:maxLength="20"
            />
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/iv_conf_new_pass"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/password_visible_icon" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/txt_send_otp_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/btn_10sdp_radius"
            android:fontFamily="@font/kumbh_sans_medium"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />
    </com.facebook.shimmer.ShimmerFrameLayout>
    <TextView
        android:id="@+id/tv_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/btn_10sdp_radius"
        android:fontFamily="@font/kumbh_sans_medium"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/confirm_new_pass"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>