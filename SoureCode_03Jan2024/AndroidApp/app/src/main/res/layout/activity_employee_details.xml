<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EmployeeDetailsActivity">

    <include layout="@layout/actionbar_layout_with_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/simple_edittext"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_1sdp"
                android:paddingVertical="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:shape="ring"
                    app:cardCornerRadius="45dp">

                    <ImageView
                        android:id="@+id/iv_employee_pic"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_icon" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/employee_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/kumbh_sans_bold"
                    android:gravity="start"
                    android:text="Mark Ronald"
                    android:textColor="@color/Primary100"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/edit_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/simple_edittext"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_1sdp"
                android:paddingVertical="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="start"
                    android:text="@string/employee_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:gravity="start"
                            android:text="@string/employee_id"
                            android:textColor="@color/Grey60"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/employee_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:fontFamily="@font/kumbh_sans_semi_bold"
                            android:gravity="start"
                            android:text="#237864"
                            android:textColor="@color/Grey80"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:gravity="start"
                            android:text="@string/department"
                            android:textColor="@color/Grey60"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/employee_dept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:fontFamily="@font/kumbh_sans_semi_bold"
                            android:gravity="start"
                            android:text="Field Manager"
                            android:textColor="@color/Grey80"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/simple_edittext"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_1sdp"
                android:paddingVertical="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="start"
                    android:text="@string/contact_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:gravity="start"
                            android:text="@string/email_id"
                            android:textColor="@color/Grey60"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/employee_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:fontFamily="@font/kumbh_sans_semi_bold"
                            android:gravity="start"
                            android:text="#237864"
                            android:textColor="@color/Grey80"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:gravity="start"
                            android:text="@string/mobile_no_lbl"
                            android:textColor="@color/Grey60"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/employee_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:fontFamily="@font/kumbh_sans_semi_bold"
                            android:gravity="start"
                            android:text="#237864"
                            android:textColor="@color/Grey80"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/simple_edittext"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_1sdp"
                android:paddingVertical="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="start"
                    android:text="@string/attendance_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:gravity="start"
                            android:text="@string/present_this_month"
                            android:textColor="@color/Grey60"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_attendance_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:fontFamily="@font/kumbh_sans_semi_bold"
                            android:gravity="start"
                            android:text="24"
                            android:textColor="@color/Grey80"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/_10sdp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.applandeo.materialcalendarview.CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        app:abbreviationsBarColor="@color/White80"
                        app:abbreviationsLabelsColor="@color/Grey60"
                        app:anotherMonthsDaysLabelsColor="@color/Grey60"
                        app:daysLabelsColor="@color/Primary100"
                        app:eventsEnabled="false"
                        app:headerColor="@color/White80"
                        app:headerLabelColor="@color/Primary100"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:pagesColor="@color/White80"
                        app:selectionColor="@color/Primary100"
                        app:selectionLabelColor="@color/White100"
                        app:todayLabelColor="@color/Primary100"
                        app:type="many_days_picker"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:clickable="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_previous_month"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/right_icon" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/iv_next_month"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/left_icon" />
                        </LinearLayout>

                    </LinearLayout>
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/sv_shimmer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:clickable="true"
                            android:orientation="vertical">





                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
