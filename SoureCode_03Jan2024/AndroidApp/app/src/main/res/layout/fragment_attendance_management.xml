<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".fragments.AttendanceManagementFragment">

    <include layout="@layout/actionbar_layout_with_title" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/Primary100"
        app:tabSelectedTextColor="@color/Primary100"
        app:tabTextAppearance="@style/CustomTextAppearanceTab"
        app:tabTextColor="@color/Grey60">

    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/txt_field_sign_screen"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/search_icon" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:fontFamily="@font/kumbh_sans_regular"
                android:hint="@string/search_employee"
                android:imeOptions="actionSearch"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="@color/Grey60"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/iv_clear_search"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/remove_image_icon"
                app:tint="@color/Primary100" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_add_employee"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_7sdp"
            android:padding="@dimen/_1sdp"
            android:src="@drawable/add_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp" />

    <!--Add Attendance  Tab -->

    <LinearLayout
        android:id="@+id/ll_add_attendance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_previous_month"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/right_icon" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:text="March 2023"
                android:textColor="@color/Primary100"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/iv_next_month"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/left_icon" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginVertical="@dimen/_7sdp"
            android:visibility="gone" />

        <com.michalsvec.singlerowcalendar.calendar.SingleRowCalendar
            android:id="@+id/main_single_row_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            app:deselection="false"
            app:longPress="false"
            app:multiSelection="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="start"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@string/employee_attendance_list"
                android:textColor="@color/Primary100"
                android:textSize="@dimen/_12sdp" />

            <CheckBox
                android:id="@+id/ck_select_all_attendance"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                app:buttonTint="@color/Primary100" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_7sdp"
            android:layout_weight="1">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sv_employees_shimmer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_employees_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_employees"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="10"
                tools:listitem="@layout/layout_attendance_employee_adapter"

                />

            <TextView
                android:id="@+id/tv_no_employees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/kumbh_sans_regular"
                android:text="@string/no_result_found"
                android:textColor="@color/Grey60"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_no_employees_added_yet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_minus25sdp"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:text="@string/no_employee_has_been_added_yet"
                android:textColor="@color/Grey60"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/txt_add_att_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:background="@drawable/btn_forget_password"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textColor="@color/White20"
                    android:textSize="@dimen/_14sdp" />

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/txt_add_att"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/btn_forget_password"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_12sdp"
                android:text="@string/submit"
                android:textColor="@color/White20"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

    </LinearLayout>

    <!--View Attendance  Tab -->

    <LinearLayout
        android:id="@+id/ll_view_attendance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/btn_bg_primery200"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/tv_date_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/kumbh_sans_regular"
                android:gravity="center"
                android:text="@string/_12_march_2023_25_march_2023"
                android:textColor="@color/Grey100"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/iv_clear_date"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/close_circle" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_7sdp"
            android:layout_weight="1">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sv_view_employees_shimmer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_employees_attendance_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_employees_attendance"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </LinearLayout>

    <!--Empty Search    -->
    <LinearLayout
        android:id="@+id/ll_empty_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:src="@drawable/emptysearch_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_minus25sdp"
            android:fontFamily="@font/kumbh_sans_regular"
            android:gravity="center"
            android:text="@string/need_to_select_filter_first"
            android:textColor="@color/Grey60"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25" />
    </LinearLayout>

</LinearLayout>