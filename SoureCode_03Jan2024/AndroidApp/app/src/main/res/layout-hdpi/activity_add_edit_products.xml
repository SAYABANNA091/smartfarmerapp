<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.AddEditProductsActivity">


    <include layout="@layout/actionbar_layout_with_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/kumbh_sans_medium"
                android:text="@string/please_fill_information"
                android:textColor="@color/Primary100"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/txt_field_sign_screen"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/t" />

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:hint="@string/enter_title"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textColor="@color/Primary100"
                    android:textColorHint="@color/Grey60"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/ll_drop_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/txt_field_sign_screen"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/iv_drop_down_icon_main"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/defual_category" />

                <TextView
                    android:id="@+id/txt_drop_down_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="@font/kumbh_sans_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/select_category"
                    android:textColor="@color/Grey100"
                    android:textColorHint="@color/Grey60"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/iv_arrow_icon"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/arrow_down" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/ll_drop_down_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/ll_drop_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/animal_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:fontFamily="@font/kumbh_sans_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/animal"
                        android:textColorHint="@color/Primary100"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_drop_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/agri_tools_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/kumbh_sans_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/agri_tools"
                        android:textColorHint="@color/Primary100"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_drop_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/agri_products_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/kumbh_sans_regular"
                        android:gravity="center_vertical"
                        android:hint="@string/agri_products"
                        android:textColorHint="@color/Primary100"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_details"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />
                <LinearLayout
                    android:id="@+id/ll_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/txt_field_sign_screen"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/location_icon" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/kumbh_sans_regular"
                        android:text="@string/pick_location"
                        android:textColor="@color/Primary100"
                        android:gravity="center|start"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />
                <LinearLayout
                    android:id="@+id/ll_tracker_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/txt_field_sign_screen"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/dollar_square" />

                    <EditText
                        android:id="@+id/et_tracker_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789"
                        android:fontFamily="@font/kumbh_sans_regular"
                        android:hint="@string/enter_product_price"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="5"
                        android:maxLines="1"
                        android:textColorHint="@color/Grey60"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/ll_tracker_dec"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/txt_field_sign_screen"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/message_text" />

                    <EditText
                        android:id="@+id/et_tracker_dec"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/kumbh_sans_regular"
                        android:gravity="top"
                        android:hint="@string/enter_description"
                        android:imeOptions="actionDone"
                        android:maxLength="500"
                        android:textColorHint="@color/Grey60"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_rv_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />


                    <LinearLayout
                        android:id="@+id/ll_upload_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:background="@drawable/dotted_square"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="@dimen/_11sdp"
                            android:src="@drawable/upload_img_icon" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/upload_image_here_or"
                            android:textColor="@color/Primary100"
                            android:textColorHint="@color/Grey60"
                            android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:elevation="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_2sdp">

                            <TextView
                                android:id="@+id/txt_browse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/Primary100"
                                android:fontFamily="@font/kumbh_sans_regular"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:paddingVertical="@dimen/_7sdp"
                                android:text="@string/browse"
                                android:textColor="@color/White80"
                                android:textSize="@dimen/_12sdp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_images"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/kumbh_sans_medium"
                        android:text="@string/add_seller_info"
                        android:textColor="@color/Primary100"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/ll_seller_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:background="@drawable/txt_field_sign_screen"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:padding="@dimen/_12sdp"
                            android:src="@drawable/user_icon" />

                        <EditText
                            android:id="@+id/et_seller_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:hint="@string/enter_name"
                            android:imeOptions="actionNext"
                            android:inputType="textVisiblePassword"
                            android:maxLength="41"
                            android:maxLines="1"
                            android:textColor="@color/Primary100"
                            android:textColorHint="@color/Grey60"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/ll_seller_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:background="@drawable/txt_field_sign_screen"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:padding="@dimen/_12sdp"
                            android:src="@drawable/call" />

                        <EditText
                            android:id="@+id/et_seller_number"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:hint="@string/enter_mobile_number"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="@color/Primary100"
                            android:textColorHint="@color/Grey60"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/ll_seller_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:background="@drawable/txt_field_sign_screen"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:padding="@dimen/_12sdp"
                            android:src="@drawable/pincode_icon" />

                        <EditText
                            android:id="@+id/et_seller_pincode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:hint="@string/enter_pincode"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:textColor="@color/Primary100"
                            android:textColorHint="@color/Grey60"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/ll_seller_upload_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:background="@drawable/dotted_square"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp">
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_seller_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:padding="@dimen/_11sdp"
                            android:src="@drawable/upload_img_icon" />

                        <TextView
                            android:id="@+id/tv_seller_image"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/add_seller_picture"
                            android:textColor="@color/Primary100"
                            android:textColorHint="@color/Grey60"
                            android:textSize="@dimen/_12sdp"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:elevation="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_2sdp">

                            <TextView

                                android:id="@+id/txt_seller_browse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/Primary100"
                                android:fontFamily="@font/kumbh_sans_regular"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:paddingVertical="@dimen/_7sdp"
                                android:text="@string/browse"
                                android:textColor="@color/White80"
                                android:textSize="@dimen/_12sdp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rv_seller_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/txt_shimmer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/btn_5sdp_radius"
                                android:fontFamily="@font/kumbh_sans_regular"
                                android:gravity="center"
                                android:paddingVertical="@dimen/_10sdp"
                                android:textColor="@color/White80"
                                android:textSize="@dimen/_12sdp" />
                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <TextView
                            android:id="@+id/tv_add_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/btn_5sdp_radius"
                            android:fontFamily="@font/kumbh_sans_regular"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/update"
                            android:textColor="@color/White80"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>